# =============================================================================
# Gateway - Development Dockerfile (with hot reload via air)
# =============================================================================
FROM golang:1.23-alpine

WORKDIR /app/src

RUN apk add --no-cache git && \
    go install github.com/air-verse/air@v1.61.7

COPY go.mod go.sum ./
RUN go mod download

COPY . .

EXPOSE 8080 50051

CMD ["air", "-c", ".air.toml"]
