# Application
APP_NAME=Robot ML Web Application
APP_ENV=development
DEBUG=true

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Frontend
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# Database
DATABASE_URL=postgresql://robot_user:robot_password@postgres:5432/robot_ml_db
POSTGRES_USER=robot_user
POSTGRES_PASSWORD=robot_password
POSTGRES_DB=robot_ml_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# MQTT Broker
MQTT_BROKER_HOST=mqtt-broker
MQTT_BROKER_PORT=1883
MQTT_USERNAME=robot_mqtt
MQTT_PASSWORD=mqtt_password
MQTT_CLIENT_ID=robot_ml_backend

# MQTT Topics
MQTT_TOPIC_CMD_VEL=robot/cmd_vel
MQTT_TOPIC_NAV_GOAL=robot/nav/goal
MQTT_TOPIC_NAV_CANCEL=robot/nav/cancel
MQTT_TOPIC_ROBOT_STATUS=robot/status
MQTT_TOPIC_CAMERA_IMAGE=robot/camera/image
MQTT_TOPIC_NAV_STATUS=robot/nav/status

# WebSocket
WS_HEARTBEAT_INTERVAL=5

# File Storage
IMAGE_STORAGE_PATH=/app/data/images
DATASET_STORAGE_PATH=/app/data/datasets
MODEL_STORAGE_PATH=/app/data/models

# Machine Learning
ML_DEVICE=cuda  # cuda or cpu
ML_BATCH_SIZE=32
ML_NUM_WORKERS=4
ML_LEARNING_RATE=0.001

# LLM / RAG
LLM_PROVIDER=openai  # openai, anthropic, etc.
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
RAG_EMBEDDING_MODEL=text-embedding-ada-002
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_VECTOR_DB_PATH=/app/data/rag/embeddings

# Unity Simulator
UNITY_EXECUTABLE_PATH=/app/unity-simulator/build/RobotSimulator.x86_64
UNITY_AUTO_START=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
