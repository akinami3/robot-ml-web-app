# ===========================================
# AMR SaaS Platform - Environment Variables
# ===========================================

# Database (PostgreSQL)
POSTGRES_USER=amr_user
POSTGRES_PASSWORD=amr_password
POSTGRES_DB=amr_db
DATABASE_URL=postgresql+asyncpg://amr_user:amr_password@postgres:5432/amr_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# MQTT Broker
MQTT_BROKER=tcp://mosquitto:1883
MQTT_CLIENT_ID=amr-gateway

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8081
GATEWAY_URL=http://gateway:8081
BACKEND_URL=http://backend:8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
