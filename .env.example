# ===========================================
# AMR SaaS Platform - Environment Variables
# ===========================================

# Database (PostgreSQL)
POSTGRES_USER=amr_user
POSTGRES_PASSWORD=amr_password
POSTGRES_DB=amr_db
DATABASE_URL=postgresql+asyncpg://amr_user:amr_password@postgres:5432/amr_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# MQTT Broker
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=amr-gateway

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Gateway (gRPC for Backend communication)
GRPC_PORT=50051
GATEWAY_GRPC_ADDRESS=gateway:50051

# Gateway (WebSocket for Frontend direct communication)
WEBSOCKET_PORT=8082

# Backend gRPC Server (data recording from Gateway)
BACKEND_GRPC_ADDRESS=backend:50052
GRPC_SERVER_PORT=50052

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GATEWAY_WS_URL=ws://localhost:8082/ws
