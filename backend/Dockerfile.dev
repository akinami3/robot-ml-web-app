FROM python:3.12-slim

WORKDIR /app

RUN pip install --no-cache-dir --upgrade pip setuptools wheel

COPY pyproject.toml .
COPY app/ ./app/
RUN pip install --no-cache-dir -e ".[dev]"

# Create directories
RUN mkdir -p /app/keys /tmp/exports

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
